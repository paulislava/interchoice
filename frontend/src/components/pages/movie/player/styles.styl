.container
  width 100vw
  height 100vh
  position fixed
  top 0
  left 0
  display flex
  background black
  .video
    width 100%
    height 100%
    position relative
  .childrenVideo
    z-index -100
    position absolute
    visibility hidden
  .buttons
    display flex
    flex-flow row
    justify-content center
    width 100%
    position absolute
    bottom 2.5em
    left 0
    
  .videoButton
    background: rgba(76, 76, 76, 0.34);
    padding 1em 2em
    min-width 15em
    font-size 1.2em
    color white
    margin 0 1em