.container
  background rgba(61, 61, 61, 0.92)
  padding 4.5rem 4rem 2.5rem
  display grid
  grid-template-columns 1fr 1fr
  gap 4em
  position fixed
  width 90%
  height max-content
  max-height 90%
  left 5%
  top 12em
  z-index 1000

  .switchFormControl
    margin-bottom 1.5em

  .switchLabel
    color white
  
  .fields
    display block

  .video
    width 100%
    max-width 100%

  .fileInput
    margin-top .5rem

  .closeButton
    cursor pointer
    position absolute
    right 2rem
    top 1rem
    width 1.3rem
    height 1.3rem