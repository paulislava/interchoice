.container
  display block
  width 100%
  margin-bottom 1.5em
  margin-top .7em

  .fieldContainer

  .field
    color white

    fieldset
      border-color: white !important

  .input
    border-radius 4px
    overflow hidden !important

  .focused
    label
      color var(--color-1) !important
    fieldset
      border-color var(--color-1) !important
  &>*
    display block
    width 100%

.root
  .label
    color white

  .label.focusedLabel
    color: var(--color-1) !important
