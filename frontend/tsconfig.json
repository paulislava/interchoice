{
    "extends": "./tsconfig-base.json",
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es7", "es2017", "esnext", "esnext.intl", "es2017.intl", "es2018.intl"],
      "allowJs": true,
      "jsx": "react",
      "esModuleInterop": true,
      "outDir": "./dist/",
      "baseUrl": "./",
      "paths": {
        "actions/*": ["src/actions/*"],
        "components/*": ["src/components/*"],
        "selectors/*": ["src/selectors/*"],
        "root/constants": ["src/constants"],
        "constants/*": ["src/constants/*"],
        "reducers": ["src/reducers"],
        "reducers/*": ["src/reducers/*"],
        "middleware/*": ["src/middleware/*"],
        "types/*": ["src/types/*"],
        "sagas/*": ["src/sagas/*"],
        "root/*": ["src/*"]
      }
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["node_modules", "dist", ".vscode", "**/*.styl.d.ts"]
  }
  